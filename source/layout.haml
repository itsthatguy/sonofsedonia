!!!
%html
  %head
    %meta{:charset => "utf-8"}
    / Always force latest IE rendering engine (even in intranet) &amp; Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:name => "author", :content => "Ben Chaney"}
    %a{:rel => "author", :href => "https://plus.google.com/105149306655131970414"}
    = stylesheet_link_tag "screen.css", "http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic|Caudex"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js", "http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js"
    = yield_content :head

  %body{:class => page_classes}
    #header
      .container
        .right
          %a.icon-twitter{:href => 'http://twitter.com/benchaneysos'}
            %span.title twitter
            %span.count 100
          %a.icon-facebook{:href => 'http://www.facebook.com/SonOfSedonia'}
            %span.title facebook
            %span.count= " "
        .left
          %a{:href => '#author'} About the Author
          %a{:href => '#summary'} Summary
    #wrap
      = yield
    #footer
      .container
        .col-left
          %h1 Son of Sedonia
        .right
          %a.button-amazon{:href => "http://www.amazon.com/Son-of-Sedonia-ebook/dp/B00AO5ID9Q"} Buy on Amazon
          .button-free
            .text Free Preview
            .hovered>
              %a.epub{:href => "SonofSedonia_Sample.epub"}> ePub
              %a.mobi{:href => "SonofSedonia_Sample.mobi"}> Mobi
    #cover-large
      %img{:src => "/images/cover-full-res.png"}

    :javascript

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-37079356-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);

        var facebookURL = "https://graph.facebook.com/?ids=sonofsedonia&callback=?"
        $.getJSON(facebookURL, function(json) {
          likes = json["sonofsedonia"]["likes"];
          $(".icon-facebook .count").html(likes);
        });
        twitterURL = 'http://twitter.com/users/benchaneysos.json?callback=?';
        $.getJSON(twitterURL, function(json) {
          follows = json.followers_count;
          $(".icon-twitter .count").html(follows);
        });

        $("img[rel]").overlay({
          mask: {
          color: "rgba(0,0,0, .98)"
          }
        });

      })();
